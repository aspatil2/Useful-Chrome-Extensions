{
  "manifest_version": 3,
  "name": "Vertical Tabs",
  "version": "1.0",
  "description": "A vertical tabs manager for the Side Panel.",
  "permissions": [
    "tabs",
    "sidePanel",
    "activeTab",
    "favicon"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open Vertical Tabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}